<Application x:Class="Clock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MWindow.xaml">
    <Application.Resources>
		<!--
		 Add standard system colors    
		<SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White" />
		-->
        <LinearGradientBrush x:Key="BlueGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0"/>
            <GradientStop Color="#002673" Offset="1.0"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
