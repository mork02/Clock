<Page x:Class="Clock.WPF.CountdownPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clock.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CountdownPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="5,119,5,0" >

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <Button Content="⬆️" Click="OnPlusHour" Margin="2"/>
                    <TextBlock x:Name="HoursText"
                               Text="00"
                               FontSize="36"
                               Margin="5"
                               HorizontalAlignment="Center"/>
                    <Button Content="⬇️" Click="OnMinusHour" Margin="2"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <Button Content="⬆️" Click="OnPlusMinute" Margin="2"/>
                    <TextBlock x:Name="MinutesText"
                               Text="05"
                               FontSize="36"
                               Margin="5"
                               HorizontalAlignment="Center"/>
                    <Button Content="⬇️" Click="OnMinusMinute" Margin="2"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <Button Content="⬆️" Click="OnPlusSecond" Margin="2"/>
                    <TextBlock x:Name="SecondsText"
                               Text="00"
                               FontSize="36"
                               Margin="5"
                               HorizontalAlignment="Center"/>
                    <Button Content="⬇️" Click="OnMinusSecond" Margin="2"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Border Grid.Column="1"
                BorderThickness="2"
                BorderBrush="Gray"
                CornerRadius="8"
                Padding="10"
                Margin="10"
                Background="White">
            <StackPanel x:Name="TimerContainer"
                        Orientation="Vertical"
                        Margin="5">
                <TextBlock FontSize="16">Aktive Timer</TextBlock>
            </StackPanel>
        </Border>

        <StackPanel x:Name="InputContainer"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="74"
                    Margin="0,230,0,0">

            <TextBlock FontSize="16" HorizontalAlignment="Center" Text="Titel"/>
            <TextBlock FontSize="10" HorizontalAlignment="Center" Text="(max. 20 Zeichen)"/>

            <TextBox x:Name="InputTitle"
                    Width="200"
                    Height="24"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    MaxLines="1"
                    MaxLength="20"
                    FontSize="12"/>
        </StackPanel>

        <Button Click="OnCreateButton"
                x:Name="StartStopButton"
                Width="100"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,310,0,0"
                Background="Green"
                Foreground="White"
                FontSize="24"
                Content="Erstellen"/>


        <Button Click="OnBackToHomeClick"
                Background="Transparent"
                BorderThickness="0"
                Padding="4"
                Margin="5"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Cursor="Hand">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/WPF/Assets/left-arrow.png"
                    Width="16"
                    Height="16"
                    VerticalAlignment="Center"
                    Margin="0,0,4,0"/>
                <TextBlock Text="Back to Home"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
