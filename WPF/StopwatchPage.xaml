<Page x:Class="Clock.StopwatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clock"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StopwatchPage">

    <Grid>
        <Label 
                x:Name="TimeLabel"
                Content="00:00.00" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="64"/>

        <Button Click="OnStartStopClick"
                x:Name="StartStopButton"
                Width="100"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="-150,0,0,50"
                Background="Green"
                Foreground="White"
                FontSize="24"
                Content="Start"/>

        <Button Click="OnResetButtonClick"
                x:Name="ResetButton"
                Width="100"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="150,0,0,50"
                Background="White"
                FontSize="24"
                Content="Reset"/>


        <Button Click="OnBackToHomeClick"
                Background="Transparent"
                BorderThickness="0"
                Padding="4"
                Margin="5"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Cursor="Hand">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/WPF/Assets/left-arrow.png"
                       Width="16"
                       Height="16"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0"/>
                <TextBlock Text="Back to Home"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
