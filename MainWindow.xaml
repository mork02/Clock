<Window x:Class="Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="Black"
        Title="Clock" Height="450" Width="800">
    <Grid>
        <Label x:Name="Label" Foreground="White" Content="Clock!" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="Stopwatch" Content="Stopwatch" Width="150" Height="50" HorizontalAlignment="Center" Margin="-200,0,0,0" Click="OnStopwatchClick"/>
        <Button x:Name="Countdown" Content="Countdown" Width="150" Height="50" HorizontalAlignment="Center" Margin="200,0,0,0" Click="OnCountdownClick"/>
    </Grid>
</Window>
